<%= form_with(model: [@topic, post], local: false) do |form| %>
  <div class="form-container">
    <% if post.errors.any? %>
      <div class="error-message">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
        <ul>
          <% post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :headline %>
      <%= form.text_field :headline, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :content %>
      <%= form.text_area :content, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :post_image %>
      <%= form.file_field :post_image, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :tag_ids %>
      <%= form.collection_check_boxes :tag_ids, Tag.all, :id, :name, class: "form-check-input" %>
    </div>

    <div class="form-group">
      <%= form.text_field :topic_id, type: :hidden %>
    </div>

    <div class="form-group">
      <%= form.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
